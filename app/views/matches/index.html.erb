<p id="notice"><%= notice %></p>

<h1>Matches</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
    <%= Team.where(id: match.team_id).first.team_name %>
    VS
    <%= Team.where(id: match.away_id).first.team_name %>
      <tr>
        <td><%= link_to 'Show Results', match, :class=> "btn", :match => match.id %></td>
        <!-- <td><%= link_to 'Edit', edit_match_path(match) %></td> -->
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_match_path %>
